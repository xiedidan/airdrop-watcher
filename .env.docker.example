# WebMon Docker 环境变量配置示例
# 复制此文件为 .env 并修改相关配置
# 然后运行: docker-compose up -d

# =============================================================================
# 服务端口
# =============================================================================

# WebUI 服务端口 (默认 8000)
WEBMON_PORT=8000

# =============================================================================
# 日志配置
# =============================================================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 调试模式
DEBUG=false

# =============================================================================
# AI分析配置
# =============================================================================

# 是否启用AI分析 (true/false)
AI_ENABLED=false

# AI API配置 (支持DeepSeek、OpenAI等OpenAI兼容API)
AI_API_URL=https://api.deepseek.com/v1
AI_API_KEY=

# 模型名称
# DeepSeek: deepseek-reasoner, deepseek-chat
# OpenAI: gpt-4, gpt-3.5-turbo
AI_MODEL=deepseek-reasoner

# 生成参数
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7
AI_TIMEOUT=60

# =============================================================================
# 推送平台配置 (至少配置一个)
# =============================================================================

# PushPlus 微信推送
PUSHPLUS_TOKEN=
PUSHPLUS_TOPIC=

# Telegram Bot 推送
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_PROXY_URL=

# Discord Webhook 推送
DISCORD_WEBHOOK_URL=
DISCORD_USERNAME=WebMon

# 飞书 Webhook 推送
FEISHU_WEBHOOK_URL=
FEISHU_SECRET=

# =============================================================================
# 监控配置
# =============================================================================

# 默认检测间隔 (秒)
DEFAULT_INTERVAL=300

# 最大并发任务数
MAX_CONCURRENT_TASKS=5

# 页面加载超时时间 (秒)
PAGE_LOAD_TIMEOUT=30

# 内容变化检测阈值 (0.0-1.0)
SIMILARITY_THRESHOLD=0.95

# =============================================================================
# 代理配置 (可选)
# =============================================================================

# HTTP/HTTPS 代理
HTTP_PROXY=
HTTPS_PROXY=

# SOCKS 代理 (格式: socks5://host:port)
SOCKS_PROXY=

# 不使用代理的地址
NO_PROXY=localhost,127.0.0.1
