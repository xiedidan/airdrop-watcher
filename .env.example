# WebMon 环境变量配置示例
# 复制此文件为 .env 并修改相关配置

# =============================================================================
# 基础配置
# =============================================================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 数据存储目录
DATA_DIR=./data
CONFIG_DIR=./config
LOGS_DIR=./logs

# 浏览器配置
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30
BROWSER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =============================================================================
# AI分析配置
# =============================================================================

# 是否启用AI分析 (true/false)
AI_ENABLED=false

# AI API配置 (支持DeepSeek、OpenAI等OpenAI兼容API)
AI_API_URL=https://api.deepseek.com/v1
AI_API_KEY=

# 模型名称
# DeepSeek: deepseek-reasoner, deepseek-chat
# OpenAI: gpt-4, gpt-3.5-turbo
AI_MODEL=deepseek-reasoner

# 生成参数
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7

# 请求超时时间 (秒)
AI_TIMEOUT=60

# =============================================================================
# 推送平台配置
# =============================================================================

# PushPlus 微信推送配置
PUSHPLUS_TOKEN=
PUSHPLUS_TOPIC=
PUSHPLUS_TEMPLATE=

# Telegram Bot 推送配置
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_PROXY_URL=

# Discord Webhook 推送配置
DISCORD_WEBHOOK_URL=
DISCORD_USERNAME=WebMon
DISCORD_AVATAR_URL=

# 飞书 Webhook 推送配置
FEISHU_WEBHOOK_URL=
FEISHU_SECRET=

# =============================================================================
# 监控配置
# =============================================================================

# 默认检测间隔 (秒)
DEFAULT_INTERVAL=300

# 最大并发任务数
MAX_CONCURRENT_TASKS=5

# 页面加载超时时间 (秒)
PAGE_LOAD_TIMEOUT=30

# 内容变化检测阈值 (0.0-1.0, 1.0表示完全相同)
SIMILARITY_THRESHOLD=0.95

# 重试次数
MAX_RETRY_TIMES=3

# 重试间隔 (秒)
RETRY_INTERVAL=5

# =============================================================================
# 代理配置 (可选)
# =============================================================================

# HTTP代理
HTTP_PROXY=
HTTPS_PROXY=

# SOCKS代理 (支持socks4和socks5)
# 格式: socks5://host:port 或 socks4://host:port
SOCKS_PROXY=

# 代理认证 (可选)
PROXY_USERNAME=
PROXY_PASSWORD=

# 不使用代理的地址 (逗号分隔)
NO_PROXY=localhost,127.0.0.1

# =============================================================================
# SSL/TLS 配置
# =============================================================================

# SSL验证 (true/false)
# 设置为false可能存在安全风险，仅在必要时禁用
VERIFY_SSL=true

# 客户端证书 (可选，用于双向TLS认证)
CLIENT_CERT_PATH=
CLIENT_KEY_PATH=

# =============================================================================
# User-Agent 配置
# =============================================================================

# 自定义User-Agent (可选)
# 如果不设置，将使用默认的Chrome User-Agent
CUSTOM_USER_AGENT=

# =============================================================================
# 高级配置
# =============================================================================

# 历史记录保留天数
HISTORY_RETENTION_DAYS=30

# 自动备份配置
AUTO_BACKUP=true
BACKUP_INTERVAL_DAYS=7

# 内存限制 (MB)
MEMORY_LIMIT=512

# 缓存大小限制 (MB)
CACHE_SIZE_LIMIT=100

# =============================================================================
# 安全配置
# =============================================================================

# 敏感信息掩码 (是否在日志中显示完整信息)
MASK_SENSITIVE_INFO=true

# 允许监控的域名白名单 (逗号分隔，留空表示不限制)
ALLOWED_DOMAINS=

# 禁止监控的域名黑名单 (逗号分隔)
BLOCKED_DOMAINS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# 开发配置 (仅开发环境使用)
# =============================================================================

# 调试模式
DEBUG=false

# 测试模式
TEST_MODE=false

# 模拟推送 (不实际发送推送)
MOCK_NOTIFICATIONS=false

# 详细日志
VERBOSE_LOGGING=false